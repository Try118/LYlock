<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.xk_ys_VOOLOC.Authorization_Phone">

    <RelativeLayout
        style="@style/RelativeLayout_style"
        android:background="@color/bannercolor">

        <TextView
            android:id="@+id/back"
            style="@style/correct_back"
            android:background="@drawable/back" />

        <TextView
            style="@style/banerText"
            android:text="@string/Authorization_Phone" />

        <TextView style="@style/forward" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/Round_shape_style_1"
            android:text="1" />

        <TextView
            style="@style/Round_shape_style"
            android:text="2" />

        <TextView
            android:id="@+id/textView"
            style="@style/Round_shape_style"
            android:text="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/login_text_size"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/contract"
            android:textColor="@color/Tip1" />

        <!--<TextView-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="14dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:background="@drawable/back1" />-->

        <!--<TextView-->
        <!--style="@style/login_text_size"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/area_number" />-->

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:hint="@string/input_contract"
            android:lines="1"
            android:textColorHint="@color/colorhint"
            android:textCursorDrawable="@null"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/get_phone"
        style="@style/TextView_style4"
        android:layout_marginRight="20dp"
        android:text="@string/get_contacts" />

    <LinearLayout
        android:id="@+id/name_line"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            style="@style/login_text_size"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/beizhu"
            android:textColor="@color/Tip1" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:hint="@string/input_name"
            android:lines="1"
            android:maxLength="11"
            android:textColorHint="@color/colorhint"
            android:textCursorDrawable="@null"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/next"
        style="@style/TextView_style"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/login_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/WeChat"
            style="@style/TextView_style4"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:text="@string/send_password_by_Wechat"

            />
    </LinearLayout>
</LinearLayout>
