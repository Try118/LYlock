<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.xk_ys_VOOLOC.input_password">

    <TextView
        android:id="@+id/input_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"

        android:background="@drawable/back2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView

            style="@style/sizeline"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/login_way"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nation"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="CN > +86">

                </TextView>

                <EditText
                    android:id="@+id/input_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:hint="@string/input_phone_number"
                    android:inputType="phone"
                    android:lines="1"
                    android:padding="8dp"
                    android:text="13823839265"
                    android:textColorHint="@color/colorhint"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"

                    android:lines="1"
                    android:text="@string/password">

                </TextView>

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:padding="8dp"
                    android:text="123456"
                    android:textColorHint="@color/colorhint"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/input_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:text="@string/forget_password"
            android:textColor="@color/Tip" />

        <Button
            android:id="@+id/login"
            style="@style/button_one"
            android:layout_marginTop="23dp"
            android:text="@string/login" />
    </LinearLayout>
</RelativeLayout>
