<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/RelativeLayout_style"
        android:background="@color/bannercolor">

        <TextView
            android:id="@+id/back"
            style="@style/correct_back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView2"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/textView2"
            style="@style/banerText"
            android:text="@string/Setting_time" />

        <TextView style="@style/forward" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/set_password_time"
            android:textSize="@dimen/text_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView_style2"
                android:text="START"
                android:visibility="gone" />

            <TextView
                android:id="@+id/start_time"
                style="@style/TextView_style3"
                android:layout_marginTop="8dp"
                android:text="@string/from_now_on"
                android:visibility="gone" />

            <TextView
                android:id="@+id/self"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="自定义"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/text_normal" />

            <View
                style="@style/view1"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/forever"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="永久"
                android:textColor="@color/colorhint"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                style="@style/TextView_style2"
                android:layout_width="60dp"
                android:text="@string/end" />

            <TextView
                android:id="@+id/end_time"
                style="@style/TextView_style3"
                android:text="@string/deadline" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/finish"
        style="@style/TextView_style"
        android:layout_marginTop="40dp"
        android:text="@string/finish" />


</LinearLayout>
