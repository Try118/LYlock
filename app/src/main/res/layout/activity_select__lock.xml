<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/RelativeLayout_style"
        android:background="@color/bannercolor">

        <TextView
            android:id="@+id/back"
            style="@style/correct_back"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/lock_name"
            style="@style/banerText"
            android:text="@string/Select_Lock" />

        <TextView
            android:id="@+id/lock_setting"
            style="@style/forward"
            android:background="@drawable/set" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/power_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/power" />

        <TextView

            android:id="@+id/power"
            style="@style/TextView_style7"
            android:layout_weight="1"
            android:lines="1"
            android:text="40%" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/TextView_style8"
                    android:text="@string/start" />

                <TextView
                    android:id="@+id/start_time"
                    style="@style/TextView_style8"
                    android:text="17-01-01" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1">

                <TextView
                    style="@style/TextView_style8"
                    android:text="@string/end" />

                <TextView
                    android:id="@+id/end_time"
                    style="@style/TextView_style8"
                    android:text="18-05-05" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        style="@style/LinearLayout_style2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/open_lock"
            style="@style/lock_operation"
            android:background="@drawable/rectangle1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:background="@drawable/open_lock" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/lock_operation.one"
                    android:text="@string/open_lock"
                    android:textSize="@dimen/text_emphasize" />

                <TextView
                    style="@style/lock_operation.one"
                    android:layout_height="wrap_content"
                    android:text="@string/open_lock_news"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/send_password"
            style="@style/lock_operation"
            android:background="@drawable/rectangle2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:background="@drawable/sent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/lock_operation.one"
                    android:text="@string/sending_password"
                    android:textSize="@dimen/text_emphasize" />

                <TextView
                    style="@style/lock_operation.one"
                    android:text="@string/sent_password_news"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/giver"
            style="@style/lock_operation"
            android:background="@drawable/rectangle3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:background="@drawable/quanxian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/lock_operation.one"
                    android:text="@string/User_authorization"
                    android:textSize="@dimen/text_emphasize" />

                <TextView
                    style="@style/lock_operation.one"
                    android:text="@string/Invited_users"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

